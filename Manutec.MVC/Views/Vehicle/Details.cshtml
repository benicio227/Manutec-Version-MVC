@model Manutec.Application.Models.VehicleModel.GetByIdVehicleViewModel

@{
    ViewData["Title"] = "Detalhes do Veículo";
    var customerId = ViewBag.CustomerId;
}

<h2>Detalhes do Veículo</h2>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">

            <dt class="col-sm-3">Marca</dt>
            <dd class="col-sm-9">@Model.Brand</dd>

            <dt class="col-sm-3">Modelo</dt>
            <dd class="col-sm-9">@Model.Model</dd>

            <dt class="col-sm-3">Ano</dt>
            <dd class="col-sm-9">@Model.Year</dd>

            <dt class="col-sm-3">Placa</dt>
            <dd class="col-sm-9">@Model.LicensePlate</dd>

            <dt class="col-sm-3">Quilometragem Atual</dt>
            <dd class="col-sm-9">@Model.CurrentMileage</dd>

            <dt class="col-sm-3">Tolerância Km</dt>
            <dd class="col-sm-9">@Model.ToleranceKm</dd>
        </dl>

        <a href="/customers/@customerId/vehicles" class="btn btn-secondary">Voltar</a>
    </div>
</div>