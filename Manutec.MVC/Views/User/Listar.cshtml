@model List<Manutec.Application.Models.UserModel.GetAllUserViewModel>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<h2>Usuários</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>
                    <a asp-controller="Usuario" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-controller="Usuario" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Usuario" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-4">
    <hr />
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
        Voltar para o Dashboard
    </a>
</div>
