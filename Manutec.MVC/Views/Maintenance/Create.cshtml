@model Manutec.Application.Commands.MaintenanceEntity.InsertMaintenanceCommand
@using Manutec.Core.Enums

@{
    ViewData["Title"] = "Cadastrar Manutenção";
}

<h2>Cadastrar Manutenção</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="VehicleId"></label>
        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.Vehicles">
            <option value="">Selecione um veículo</option>
        </select>
        <span asp-validation-for="VehicleId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<MaintenanceType>()"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScheduledDate"></label>
        <input asp-for="ScheduledDate" type="date" class="form-control" />
        <span asp-validation-for="ScheduledDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScheduledMileage"></label>
        <input asp-for="ScheduledMileage" type="number" class="form-control" />
        <span asp-validation-for="ScheduledMileage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PerformedDate"></label>
        <input asp-for="PerformedDate" type="date" class="form-control" />
        <span asp-validation-for="PerformedDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PerformedMileage"></label>
        <input asp-for="PerformedMileage" type="number" class="form-control" />
        <span asp-validation-for="PerformedMileage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost"></label>
        <input asp-for="Cost" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Cadastrar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Voltar à lista</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
