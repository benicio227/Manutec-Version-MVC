@model Manutec.Application.Models.VehicleModel.GetByIdVehicleViewModel

@{
    ViewData["Title"] = "Editar Veículo";
    var customerId = ViewBag.CustomerId;
}

<h2>Editar Veículo</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="customerId" value="@customerId" />

    <div class="form-group">
        <label>Marca</label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Modelo</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Ano</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Placa</label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Quilometragem Atual</label>
        <input asp-for="CurrentMileage" class="form-control" />
        <span asp-validation-for="CurrentMileage" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Tolerância em Km</label>
        <input asp-for="ToleranceKm" class="form-control" />
        <span asp-validation-for="ToleranceKm" class="text-danger" />
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="/customers/@customerId/vehicles" class="btn btn-secondary">Cancelar</a>

</form>
