@model Manutec.Application.Models.CustomerModel.GetByIdCustomerViewModel

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h2>Confirmação de Exclusão</h2>

<p>Tem certeza que deseja excluir o cliente <strong>@Model.Name</strong>?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" /> 
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>
